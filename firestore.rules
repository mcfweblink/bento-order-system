rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 注文(orders)コレクション: App Checkで検証されたアプリからのみ作成(注文)できる
    match /orders/{orderId} {
      allow create: if request.app != null;
      allow read, update, delete: if request.auth != null;
    }

    // ★変更点: 全ての公開情報への直接の読み取りを禁止
    // データはCloud Function経由でのみ取得されるため、より安全になります。
    match /products/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /servingStyles/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /paymentMethods/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /settings/{doc=**} {
      allow read, write: if request.auth != null;
    }
    match /holidays/{doc=**} {
      allow read, write: if request.auth != null;
    }

    // カウンターはバックエンド(Cloud Functions)からのみ書き込み可
    match /counters/{counterId} {
        allow read, write: if false; // クライアントからは操作不可
    }
  }
}
